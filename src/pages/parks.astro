---
import Layout from "../layouts/Layout.astro";

const parks = [
  {
    slug: "grand-canyon",
    name: "Grand Canyon National Park",
    location: "Arizona",
    yearVisited: 2013,
    hero: "/images/parks/grandcanyon.jpg",
    blurb: "Layered rock and canyon light that changes by the minute.",
  },
  {
    slug: "yellowstone",
    name: "Yellowstone National Park",
    location: "Wyoming",
    yearVisited: 2014,
    hero: "/images/parks/yellowstone.jpg",
    blurb: "Geysers, hot springs, and wildlife on a volcanic plateau.",
  },
  {
    slug: "grand-teton",
    name: "Grand Teton National Park",
    location: "Wyoming",
    yearVisited: 2014,
    hero: "/images/parks/grand-teton.jpg",
    blurb: "Jagged peaks rising sharply from the valley floor.",
  },
  {
    slug: "hot-springs",
    name: "Hot Springs National Park",
    location: "Arkansas",
    yearVisited: "2016 & 2020",
    hero: "/images/parks/hot-springs.jpg",
    blurb: "Historic bathhouses and thermal waters in the Ouachita Mountains.",
  },
  {
    slug: "rocky-mountain",
    name: "Rocky Mountain National Park",
    location: "Colorado",
    yearVisited: 2016,
    hero: "/images/parks/rocky-mountain.jpg",
    blurb: "Alpine meadows, tundra, and peaks above 14,000 feet.",
  },
  {
    slug: "yosemite",
    name: "Yosemite National Park",
    location: "California",
    yearVisited: 2017,
    hero: "/images/parks/yosemite.jpg",
    blurb: "Granite cliffs, waterfalls, and quiet valleys in the Sierra Nevada.",
  },
  {
    slug: "guadalupe",
    name: "Guadalupe Mountains National Park",
    location: "Texas",
    yearVisited: "2017 & 2022",
    hero: "/images/parks/guadalupe.jpg",
    blurb: "Ancient fossil reef rising from the Chihuahuan Desert.",
  },
  {
    slug: "carlsbad-caverns",
    name: "Carlsbad Caverns National Park",
    location: "New Mexico",
    yearVisited: "2017 & 2022",
    hero: "/images/parks/carlsbad-caverns.jpg",
    blurb: "Vast underground chambers and evening bat flights.",
  },
  {
    slug: "crater-lake",
    name: "Crater Lake National Park",
    location: "Oregon",
    yearVisited: 2018,
    hero: "/images/parks/crater-lake.jpg",
    blurb: "The deepest lake in the US, filling an ancient volcanic caldera.",
  },
  {
    slug: "smoky-mountains",
    name: "Great Smoky Mountains National Park",
    location: "Tennessee",
    yearVisited: 2019,
    hero: "/images/parks/smoky-mountains.jpg",
    blurb: "Ancient mountains wrapped in mist and wildflowers.",
  },
  {
    slug: "olympic",
    name: "Olympic National Park",
    location: "Washington",
    yearVisited: 2021,
    hero: "/images/parks/olympic.jpg",
    blurb: "Rainforests, rugged coastline, and alpine peaks.",
  },
  {
    slug: "virgin-islands",
    name: "Virgin Islands National Park",
    location: "U.S. Virgin Islands",
    yearVisited: 2021,
    hero: "/images/parks/virgin-islands.jpg",
    blurb: "Turquoise bays, coral reefs, and tropical hillsides.",
  },
  {
    slug: "mount-rainier",
    name: "Mount Rainier National Park",
    location: "Washington",
    yearVisited: 2022,
    hero: "/images/parks/mount-rainier.jpg",
    blurb: "A glaciated volcano rising above the Pacific Northwest.",
  },
  {
    slug: "north-cascades",
    name: "North Cascades National Park",
    location: "Washington",
    yearVisited: 2023,
    hero: "/images/parks/north-cascades.jpg",
    blurb: "Remote peaks, glaciers, and wild river valleys.",
  },
  {
    slug: "glacier-bay",
    name: "Glacier Bay National Park",
    location: "Alaska",
    yearVisited: 2025,
    hero: "/images/parks/glacier-bay.jpg",
    blurb: "Tidewater glaciers and wilderness at the edge of the Pacific.",
  },
];
---

<Layout title="All Parks">
  <section class="parks-page">
    <div class="container">
      <header class="parks-header">
        <h1>All Parks</h1>
        <p>Select a park to explore its dedicated gallery.</p>
      </header>

      <div class="park-grid">
        {parks.map((park) => (
          <a href={`/parks/${park.slug}/`} class="park-card">
            <div class="park-card__image-wrapper">
              <img
                src={park.hero}
                alt={park.name}
                class="park-card__image"
              />
              <div class="park-card__label">
                <p class="park-card__name">{park.name}</p>
                <p class="park-card__location">{park.location}{park.yearVisited ? ` Â· ${park.yearVisited}` : ""}</p>
              </div>
            </div>

            <div class="park-card__body">
              <p class="park-card__blurb">{park.blurb}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
