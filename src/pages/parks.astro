---
import Layout from "../layouts/Layout.astro";

const parks = [
  {
    slug: "yosemite",
    name: "Yosemite National Park",
    location: "California",
    hero: "/images/parks/yosemite.jpg",
    blurb: "Granite cliffs, waterfalls, and quiet valleys in the Sierra Nevada.",
  },
  {
    slug: "grand-canyon",
    name: "Grand Canyon National Park",
    location: "Arizona",
    hero: "/images/parks/grandcanyon.jpg",
    blurb: "Layered rock and canyon light that changes by the minute.",
  },
  {
    slug: "olympic",
    name: "Olympic National Park",
    location: "Washington",
    hero: "/images/parks/olympic.jpg",
    blurb: "Rainforests, rugged coastline, and alpine peaks.",
  },
  {
    slug: "yellowstone",
    name: "Yellowstone National Park",
    location: "Wyoming",
    hero: "/images/parks/yellowstone.jpg",
    blurb:
      "Geysers, hot springs, wildlife, and vast open spaces on a volcanic plateau.",
  },
];
---

<Layout title="All Parks">
  <section class="parks-page">
    <div class="container">
      <header class="parks-header">
        <h1>All Parks</h1>
        <p>Select a park to explore its dedicated gallery.</p>
      </header>

      <div class="park-grid">
        {parks.map((park) => (
          <a href={`/parks/${park.slug}/`} class="park-card">
            <div class="park-card__image-wrapper">
              <img
                src={park.hero}
                alt={park.name}
                class="park-card__image"
              />
              <div class="park-card__label">
                <p class="park-card__name">{park.name}</p>
                <p class="park-card__location">{park.location}</p>
              </div>
            </div>

            <div class="park-card__body">
              <p class="park-card__blurb">{park.blurb}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
